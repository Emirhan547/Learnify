@model Learnify.DTO.DTOs.AccountDto.LoginDto
@{
    Layout = null;
    ViewData["Title"] = "Giriş Yap - Learnify";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>

    <link rel="icon" href="~/pluto-1.0.0/images/fevicon.png" type="image/png" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/style.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/responsive.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/colors.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/custom.css" />
</head>
<body class="inner_page login">
    <div class="full_container">
        <div class="container">
            <div class="center verticle_center full_height">
                <div class="login_section">
                    <div class="logo_login">
                        <div class="center">
                            <img width="210" src="~/pluto-1.0.0/images/logo/logo.png" alt="Learnify" />
                        </div>
                    </div>
                    <div class="login_form">
                        <form asp-action="Login" method="post">
                            <fieldset>
                                @if (!ViewContext.ViewData.ModelState.IsValid)
                                {
                                    <div class="alert alert-danger">
                                        <ul class="mb-0">
                                            @foreach (var error in ViewContext.ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                            {
                                                <li>@error.ErrorMessage</li>
                                            }
                                        </ul>
                                    </div>
                                }

                                <div class="field">
                                    <label class="label_field">Email Adresi</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="ornek@email.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="field">
                                    <label class="label_field">Şifre</label>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="field">
                                    <label class="label_field hidden">hidden label</label>
                                    <label class="form-check-label">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input"> Beni Hatırla
                                    </label>
                                    <a class="forgot" href="#" style="float:right;">Şifremi Unuttum?</a>
                                </div>

                                <div class="field margin_0">
                                    <label class="label_field hidden">hidden label</label>
                                    <button type="submit" class="main_bt">Giriş Yap</button>
                                </div>

                                <div class="field margin_top_20 text-center">
                                    <p>Hesabınız yok mu? <a asp-action="Register" style="color: #2196F3;">Kayıt Olun</a></p>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/pluto-1.0.0/js/jquery.min.js"></script>
    <script src="~/pluto-1.0.0/js/popper.min.js"></script>
    <script src="~/pluto-1.0.0/js/bootstrap.min.js"></script>
    <script src="~/pluto-1.0.0/js/custom.js"></script>

    <!-- Doğrulama script'lerini direkt ekliyoruz -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>