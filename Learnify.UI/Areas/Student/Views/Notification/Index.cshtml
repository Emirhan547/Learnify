@model List<Learnify.DTO.DTOs.NotificationDto.ResultNotificationDto>
@{
    Layout = "~/Views/Shared/_StudentPanelLayout.cshtml";
}

<h3 class="mb-4 fw-bold">🔔 Bildirimlerim</h3>

<div class="list-group">
    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz bildiriminiz yok.</div>
    }
    else
    {
        @foreach (var n in Model)
        {
            <a asp-action="Detail" asp-route-id="@n.Id"
               class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                <div>
                    <strong>@n.Title</strong><br />
                    <small class="text-muted">@n.CreatedDate.ToString("dd MMM yyyy HH:mm")</small>
                </div>
                <i class="fa fa-chevron-right"></i>
            </a>
        }
    }
</div>
