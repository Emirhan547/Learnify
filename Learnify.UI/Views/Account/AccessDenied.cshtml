@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Erişim Engellendi - Learnify</title>

    <link rel="icon" href="~/pluto-1.0.0/images/fevicon.png" type="image/png" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/style.css" />
    <link rel="stylesheet" href="~/pluto-1.0.0/css/custom.css" />
    <style>
        .error-container {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .error-box {
            background: white;
            padding: 60px;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            text-align: center;
            max-width: 600px;
        }

        .error-icon {
            font-size: 120px;
            color: #f44336;
            margin-bottom: 20px;
        }

        .error-title {
            font-size: 36px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .error-message {
            font-size: 18px;
            color: #666;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-box">
            <div class="error-icon">
                <i class="fa fa-ban"></i>
            </div>
            <h1 class="error-title">403 - Erişim Engellendi</h1>
            <p class="error-message">
                Bu sayfaya erişim yetkiniz bulunmamaktadır.<br>
                Lütfen yönetici ile iletişime geçiniz.
            </p>
            <a href="/" class="btn btn-primary btn-lg">
                <i class="fa fa-home"></i> Ana Sayfaya Dön
            </a>
            <a href="/Account/Logout" class="btn btn-secondary btn-lg ml-2">
                <i class="fa fa-sign-out"></i> Çıkış Yap
            </a>
        </div>
    </div>

    <script src="~/pluto-1.0.0/js/jquery.min.js"></script>
    <script src="~/pluto-1.0.0/js/bootstrap.min.js"></script>
</body>
</html>