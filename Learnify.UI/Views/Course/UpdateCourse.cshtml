@model UpdateCourseDto
@{
    ViewData["Title"] = "Kurs Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
            <div class="heading1 mb-4">
                <h3 class="fw-bold">Kurs Güncelle</h3>
            </div>

            <form asp-action="UpdateCourse" method="post" class="row g-3">
                <input type="hidden" asp-for="CourseID" />

                <div class="col-md-6">
                    <label asp-for="Title" class="form-label fw-semibold">Kurs Başlığı</label>
                    <input asp-for="Title" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                </div>

                <div class="col-md-4">
                    <label asp-for="Price" class="form-label fw-semibold">Ücret</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" />
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                    <a href="/Course/Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>
