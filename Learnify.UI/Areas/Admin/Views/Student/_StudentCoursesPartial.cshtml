@using Learnify.DTO.DTOs.StudentDto
@model List<StudentCourseDto>

@if (Model.Count == 0)
{
    <div class="alert alert-warning text-center mb-0">
        Bu öğrenci henüz herhangi bir kursa kayıtlı değil.
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th>#</th>
                <th>Kurs Adı</th>
                <th>Kategori</th>
                <th>Eğitmen</th>
                <th>Fiyat</th>
                <th class="text-center" style="width:140px;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 0;
                foreach (var course in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@course.Title</td>
                        <td>@course.CategoryName</td>
                        <td>@course.InstructorName</td>
                        <td>@course.Price ₺</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-danger unenroll-btn"
                                    data-course="@course.CourseId">
                                <i class="fa fa-trash"></i> Kaydı Sil
                            </button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
