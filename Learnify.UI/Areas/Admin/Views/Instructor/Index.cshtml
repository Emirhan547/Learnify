@using Learnify.DTO.DTOs.InstructorDto
@model List<ResultInstructorDto>

@{
    ViewData["Title"] = "Eğitmen Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
            <div class="heading1 mb-4">
                <h2 class="fw-bold">Eğitmen Listesi</h2>
            </div>

            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı Adı</th>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Branş</th>
                        <th>Verdiği Kurs Sayısı</th> <!-- ✅ Yeni sütun -->
                        <th class="text-center" style="width:160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.Email</td>
                            <td>@item.Profession</td>
                            <td>@item.CourseCount</td> <!-- ✅ Yeni veri -->
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="Instructor" asp-action="UpdateInstructor" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Güncelle</a>
                                <form asp-area="Admin" asp-controller="Instructor" asp-action="DeleteInstructor" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-area="Admin" asp-controller="Instructor" asp-action="CreateInstructor" class="btn btn-success mt-3">
                + Yeni Eğitmen Ekle
            </a>
        </div>
    </div>
</div>
