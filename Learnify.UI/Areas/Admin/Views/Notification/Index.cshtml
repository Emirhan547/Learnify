@model List<Learnify.DTO.DTOs.NotificationDto.ResultNotificationDto>
@{
    ViewData["Title"] = "Bildirimler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-bell"></i> Bildirimler</h5>
            <a asp-action="Create" class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle"></i> Yeni Bildirim
            </a>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Kullanıcı</th>
                            <th class="text-center" style="width:150px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.Title</td>
                                    <td>@(item.Content.Length > 40 ? item.Content.Substring(0, 40) + "..." : item.Content)</td>
                                    <td>@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (item.IsRead)
                                        {
                                            <span class="badge bg-success">Okundu</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Yeni</span>
                                        }
                                    </td>
                                    <td>@item.UserName</td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Bu bildirimi silmek istiyor musunuz?');">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-secondary text-center mb-0">Henüz bildirim bulunmuyor.</div>
            }
        </div>
    </div>
</div>
