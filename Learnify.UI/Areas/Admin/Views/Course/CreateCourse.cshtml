@using Learnify.DTO.DTOs.CourseDto
@model CreateCourseDto

@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="CreateCourse" method="post" class="container mt-4">
    <div class="mb-3">
        <label>Ders Başlığı</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Kategori</label>
        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Categories, "Value", "Text"))" class="form-select">
            <option value="">Kategori Seçiniz</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Eğitmen</label>
        <select asp-for="InstructorId" asp-items="@(new SelectList(ViewBag.Instructors, "Value", "Text"))" class="form-select">
            <option value="">Eğitmen Seçiniz</option>
        </select>
        <span asp-validation-for="InstructorId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

