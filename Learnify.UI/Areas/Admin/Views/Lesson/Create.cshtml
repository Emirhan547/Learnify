@model Learnify.DTO.DTOs.LessonDto.CreateLessonDto
@{
    ViewData["Title"] = "Yeni Ders Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white fw-semibold">
            Yeni Ders Ekle
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Ders başlığı girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="VideoUrl" class="form-label fw-semibold"></label>
                    <input asp-for="VideoUrl" class="form-control" placeholder="Video bağlantısı (YouTube vb.)" />
                    <span asp-validation-for="VideoUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Duration" class="form-label fw-semibold"></label>
                        <input asp-for="Duration" class="form-control" type="number" min="1" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="CourseId" class="form-label fw-semibold">Kursa Ait</label>
                        <select asp-for="CourseId"
                                asp-items="ViewBag.Courses ?? new List<SelectListItem>()"
                                class="form-select">
                            <option value="">Kurs Seçiniz</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                </div>
    
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
