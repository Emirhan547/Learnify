@model List<Learnify.DTO.DTOs.CourseDto.ResultCourseDto>
@{
    ViewData["Title"] = "Kurslar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between">
            <h5 class="mb-0">Kurs Listesi</h5>
            <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-circle"></i> Yeni Kurs</a>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Görsel</th>
                            <th>Kurs Adı</th>
                            <th>Kategori</th>
                            <th>Eğitmen</th>
                            <th>Fiyat</th>
                            <th>Süre</th>
                            <th>Durum</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="@item.ImageUrl" width="60" height="40" class="rounded"></td>
                                <td>@item.Title</td>
                                <td>@item.CategoryName</td>
                                <td>@item.InstructorName</td>
                                <td>@item.Price.ToString("C0")</td>
                                <td>@item.Duration</td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {

                                        <span class="badge bg-secondary">Pasif</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i></a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">Henüz kurs yok.</div>
            }
        </div>
    </div>
</div>
