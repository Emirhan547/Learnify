@using Learnify.DTO.DTOs.EnrollmentDto
@model List<ResultEnrollmentDto>
@{
    ViewData["Title"] = "Kayıt Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
                    <div class="heading1 mb-4">
                        <h2 class="fw-bold">Kurs Kayıtları</h2>
                    </div>

                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Öğrenci Adı</th>
                                <th>Kurs Adı</th>
                                <th>Kayıt Tarihi</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fa fa-user text-primary"></i>
                                        @item.StudentName
                                    </td>
                                    <td>
                                        <i class="fa fa-book text-success"></i>
                                        @item.CourseTitle
                                    </td>
                                    <td>
                                        <i class="fa fa-calendar text-info"></i>
                                        @item.EnrolledDate.ToString("dd.MM.yyyy HH:mm")
                                    </td>
                                    <td class="text-center">
                                        <a href="/Admin/Enrollment/UpdateEnrollment/@item.Id" class="btn btn-sm btn-primary">
                                            <i class="fa fa-edit"></i> Güncelle
                                        </a>
                                        <a href="/Admin/Enrollment/DeleteEnrollment/@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?');">
                                            <i class="fa fa-trash"></i> Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Admin/Enrollment/CreateEnrollment" class="btn btn-success mt-3">
                        <i class="fa fa-plus"></i> Yeni Kayıt Ekle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
