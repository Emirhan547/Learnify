@model List<Learnify.DTO.DTOs.MessageDto.ResultMessageDto>
@{
    ViewData["Title"] = "Gelen Kutusu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h4 class="fw-bold mb-3"><i class="bi bi-inbox"></i> Gelen Kutusu</h4>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Kimden</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th style="width:120px;">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model)
                        {
                            <tr class="@(msg.IsRead ? "" : "fw-semibold")">
                                <td>@msg.SenderName</td>
                                <td>@msg.Subject</td>
                                <td>@msg.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@msg.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@msg.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">Henüz mesaj yok.</div>
            }
        </div>
    </div>
</div>
