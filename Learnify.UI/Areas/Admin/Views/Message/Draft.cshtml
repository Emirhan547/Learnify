@model List<Learnify.DTO.DTOs.MessageDto.ResultMessageDto>
@{
    ViewData["Title"] = "Taslak Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h4 class="fw-bold mb-3"><i class="bi bi-file-earmark-text"></i> Taslak Mesajlar</h4>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Konu</th>
                            <th>Son Düzenleme</th>
                            <th style="width:160px;">İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model)
                        {
                            <tr>
                                <td>@msg.Subject</td>
                                <td>@msg.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@msg.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-eye"></i> Gör
                                    </a>
                                    <a asp-action="NewMessage" asp-route-id="@msg.Id" class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-pencil-square"></i> Düzenle
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">Henüz taslak mesaj yok.</div>
            }
        </div>
    </div>
</div>
