@using Microsoft.AspNetCore.Identity
@using Learnify.Entity.Concrete
@inject UserManager<AppUser> UserManager

@{
    var user = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html>
<head>
    <title>Öğrenci Paneli - Learnify</title>
    <link rel="stylesheet" href="~/elearning-1.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/elearning-1.0.0/css/style.css" />
</head>

<body class="bg-light">

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="bg-primary text-white p-3" style="width:250px; height:100vh;">
            <h4 class="fw-bold mb-4">📚 Öğrenci Paneli</h4>

            <p class="fw-bold">@user.FullName</p>
            <hr class="bg-light" />

            <a asp-area="Student" asp-controller="Dashboard" asp-action="Index" class="d-block text-white my-2">🏠 Dashboard</a>
            <a asp-area="Student" asp-controller="Courses" asp-action="Index" class="d-block text-white my-2">🎓 Kurslarım</a>
            <a asp-area="Student" asp-controller="Profile" asp-action="Index" class="d-block text-white my-2">👤 Profil</a>

            <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
                <button class="btn btn-light btn-sm w-100">🚪 Çıkış Yap</button>
            </form>
        </div>

        <!-- Main Content -->
        <div class="p-4 w-100">
            @RenderBody()
        </div>
    </div>

</body>
</html>
