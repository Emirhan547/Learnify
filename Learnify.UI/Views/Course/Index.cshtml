@model List<Learnify.DTO.DTOs.CourseDto.ResultCourseDto>
@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<!-- Header Start -->
<div class="container-fluid bg-primary py-5 mb-5"
     style="background: linear-gradient(to right, #1f65ff, #4dc7ff);">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <h1 class="display-3 text-white mb-3">Tüm Kurslar</h1>
                <p class="text-white">
                    Aradığın eğitimi bul ve öğrenmeye başla 🚀
                </p>
            </div>
        </div>
    </div>
</div>
<!-- Header End -->

<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-4">

            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.3s">
                        <div class="course-item bg-light">
                            <div class="position-relative overflow-hidden">
                                <img class="img-fluid" src="@item.ImageUrl" alt="@item.Title"
                                     style="height:220px;width:100%;object-fit:cover;" />

                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                    <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id"
                                       class="flex-shrink-0 btn btn-sm btn-primary px-3 border-end"
                                       style="border-radius: 30px 0 0 30px;">
                                        Detay
                                    </a>

                                    <form asp-controller="Course" asp-action="Enroll" method="post" class="d-inline">
                                        <input type="hidden" name="courseId" value="@item.Id" />
                                        <button type="submit"
                                                class="flex-shrink-0 btn btn-sm btn-success px-3"
                                                style="border-radius: 0 30px 30px 0;">
                                            Kaydol
                                        </button>
                                    </form>
                                </div>

                            </div>

                            <div class="text-center p-4 pb-0">
                                <h5 class="mb-0">@item.Title</h5>
                                <div class="mb-3">
                                    ⭐⭐⭐⭐⭐ <small>(@item.StudentCount)</small>
                                </div>
                                <p class="mb-2">@item.CategoryName</p>
                            </div>

                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2">
                                    <i class="fa fa-user-tie text-primary me-2"></i>@item.InstructorName
                                </small>
                                <small class="flex-fill text-center border-end py-2">
                                    <i class="fa fa-clock text-primary me-2"></i>@item.Duration
                                </small>
                                <small class="flex-fill text-center py-2">
                                    <i class="fa fa-money-bill text-primary me-2"></i>@item.Price ₺
                                </small>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted fs-5">Henüz kurs eklenmedi.</p>
                </div>
            }
        </div>
    </div>
</div>
