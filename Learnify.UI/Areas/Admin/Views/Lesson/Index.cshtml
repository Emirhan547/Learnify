@using Learnify.DTO.DTOs.LessonDto
@model List<ResultLessonDto>
@{
    ViewData["Title"] = "Ders Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
                    <div class="heading1 mb-4">
                        <h2 class="fw-bold">Ders Listesi</h2>
                    </div>

                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Ders Başlığı</th>
                                <th>Kurs Adı</th>
                                <th>Video URL</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.CourseTitle</td>
                                    <td>
                                        <a href="@item.VideoUrl" target="_blank" class="text-primary">
                                            <i class="fa fa-video-camera"></i> Video İzle
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="/Admin/Lesson/UpdateLesson/@item.LessonID" class="btn btn-sm btn-primary">Güncelle</a>
                                        <a href="/Admin/Lesson/DeleteLesson/@item.LessonID" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Admin/Lesson/CreateLesson" class="btn btn-success mt-3">+ Yeni Ders Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>