@model Learnify.DTO.DTOs.CourseDto.CreateCourseDto
@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white fw-semibold">
            Yeni Kurs Ekle
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Kurs başlığı girin..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kurs açıklaması girin..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- 💰 Fiyat -->
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" type="number" class="form-control" step="0.01" placeholder="₺ Fiyat girin" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- 🖼️ Kurs Görseli -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Kurs Görseli (URL)</label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="/elearning-1.0.0/img/course-1.jpg" />
                </div>

                <!-- ⏱️ Süre -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">Süre</label>
                    <input asp-for="Duration" class="form-control" placeholder="Örn: 2 saat 45 dakika" />
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label fw-semibold">Kategori</label>
                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                            <option value="">Kategori Seçiniz</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="InstructorId" class="form-label fw-semibold">Eğitmen</label>
                        <select asp-for="InstructorId" asp-items="ViewBag.Instructors" class="form-select">
                            <option value="">Eğitmen Seçiniz</option>
                        </select>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Aktif mi?</label>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
