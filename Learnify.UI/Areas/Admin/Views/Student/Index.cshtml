@model List<Learnify.Entity.Concrete.AppUser>
@{
    ViewData["Title"] = "Öğrenciler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-semibold"><i class="bi bi-mortarboard"></i> Öğrenci Listesi</h5>

            <form class="d-flex" method="get">
                <input type="text" name="search" value="@ViewBag.Search" class="form-control me-2" placeholder="Ara...">
                <select name="status" class="form-select me-2">
                    <option value="">Tümü</option>
                    <option value="active" selected="@(ViewBag.Status == "active")">Aktif</option>
                    <option value="passive" selected="@(ViewBag.Status == "passive")">Pasif</option>
                </select>
                <button type="submit" class="btn btn-outline-light">Filtrele</button>
            </form>
        </div>

        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle">
                    <thead class="table-secondary">
                        <tr>
                            <th>#</th>
                            <th>Ad Soyad</th>
                            <th>Email</th>
                            <th>Durum</th>
                            <th style="width: 200px" class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            foreach (var s in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@s.FullName</td>
                                    <td>@s.Email</td>
                                    <td>
                                        @if (s.IsActive)
                                        {
                                            <span class="badge bg-success">Aktif</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Pasif</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <button type="button" class="btn btn-info btn-sm me-1"
                                                data-bs-toggle="modal"
                                                data-bs-target="#studentModal"
                                                onclick="loadStudentDetail(@s.Id)">
                                            Detay
                                        </button>
                                        <form asp-action="ToggleStatus" asp-route-id="@s.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm @(s.IsActive ? "btn-warning" : "btn-success")">
                                                @(s.IsActive ? "Pasifleştir" : "Aktifleştir")
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-secondary text-center mb-0">Henüz öğrenci bulunmuyor.</div>
            }
        </div>
    </div>
</div>

<!-- 🔹 Modal -->
<div class="modal fade" id="studentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" id="studentModalContent">
            <!-- İçerik AJAX ile yüklenecek -->
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadStudentDetail(id) {
            fetch(`/Admin/Student/GetStudentDetail/${id}`)
                .then(res => res.text())
                .then(html => {
                    document.getElementById("studentModalContent").innerHTML = html;
                });
        }
    </script>
}
