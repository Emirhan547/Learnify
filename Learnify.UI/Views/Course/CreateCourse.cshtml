@model CreateCourseDto
@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
            <div class="heading1 mb-4">
                <h3 class="fw-bold">Yeni Kurs Ekle</h3>
            </div>

            <form asp-action="CreateCourse" method="post" class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label fw-semibold">Kurs Başlığı</label>
                    <input asp-for="Title" class="form-control" placeholder="Kurs başlığını giriniz..." />
                </div>

                <div class="col-md-12">
                    <label asp-for="Description" class="form-label fw-semibold">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kurs açıklamasını giriniz..."></textarea>
                </div>

                <div class="col-md-4">
                    <label asp-for="Price" class="form-label fw-semibold">Ücret</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Kurs ücretini giriniz..." />
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-success">Kaydet</button>
                    <a href="/Course/Index" class="btn btn-secondary">Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>
