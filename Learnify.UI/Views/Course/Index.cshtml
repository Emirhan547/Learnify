@model List<ResultCourseDto>
@{
    ViewData["Title"] = "Kurs Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
                    <div class="heading1 mb-4">
                        <h2 class="fw-bold">Kurs Listesi</h2>
                    </div>

                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Eğitmen</th>
                                <th>Ücret</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td>@item.InstructorName</td>
                                    <td>$@item.Price</td>
                                    <td class="text-center">
                                        <a href="/Course/UpdateCourse/@item.CourseID" class="btn btn-sm btn-primary">Güncelle</a>
                                        <a href="/Course/DeleteCourse/@item.CourseID" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Course/CreateCourse" class="btn btn-success mt-3">+ Yeni Kurs Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
