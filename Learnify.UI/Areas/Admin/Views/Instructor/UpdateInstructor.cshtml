@using Learnify.DTO.DTOs.InstructorDto
@model UpdateInstructorDto
@{
    ViewData["Title"] = "Eğitmen Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateInstructor" method="post" class="container mt-4">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label>Kullanıcı Adı</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Ad Soyad</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label>Branş</label>
        <input asp-for="Profession" class="form-control" />
        <span asp-validation-for="Profession" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Güncelle</button>
</form>
