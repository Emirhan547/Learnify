@model Learnify.DTO.DTOs.NotificationDto.ResultNotificationDto
@{
    ViewData["Title"] = "Bildirim Detayı";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white fw-semibold">
            Bildirim Detayı
        </div>

        <div class="card-body">
            <h5>@Model.Title</h5>
            <p class="text-muted mb-2">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</p>
            <p>@Model.Content</p>

            <hr />

            <p><strong>Kullanıcı:</strong> @Model.UserName</p>
            <p>
                <strong>Durum:</strong>
                @if (Model.IsRead)
                {
                    <span class="badge bg-success">Okundu</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Okunmadı</span>
                }
            </p>

            <a asp-action="Index" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Geri Dön
            </a>
        </div>
    </div>
</div>
