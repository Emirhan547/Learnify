@using Learnify.DTO.DTOs.CourseDto
@model CreateCourseDto
@{
    ViewData["Title"] = "Yeni Kurs Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="CreateCourse" method="post" class="container mt-4">
    <div class="mb-3">
        <label>Ders Başlığı</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Kategori</label>
        <select asp-for="CategoryID" class="form-control">
            <option value="">Kategori Seçiniz</option>
            <option value="1">Yazılım</option>
            <option value="2">Tasarım</option>
            <option value="3">Veri Bilimi</option>
        </select>
    </div>

    <div class="mb-3">
        <label>Eğitmen ID</label>
        <input asp-for="InstructorID" class="form-control" />
    </div>

    <button class="btn btn-success">Kaydet</button>
</form>
