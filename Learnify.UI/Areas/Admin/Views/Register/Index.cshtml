@model Learnify.DTO.DTOs.AccountDto.AdminRegisterDto
@{
    ViewData["Title"] = "Yeni Kullanıcı Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2><i class="fa fa-user-plus"></i> Yeni Kullanıcı Ekle</h2>
                </div>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fa fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Kullanıcı Bilgileri</h2>
                            <p class="text-muted">Yeni bir kullanıcı oluşturun ve rol atayın</p>
                        </div>
                    </div>

                    <div class="full price_table padding_infor_info">
                        <form asp-action="Index" method="post">
                            @if (!ViewContext.ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <i class="fa fa-exclamation-circle"></i>
                                    <strong>Dikkat!</strong> Lütfen aşağıdaki hataları düzeltin:
                                    <ul class="mb-0 mt-2">
                                        @foreach (var error in ViewContext.ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <div class="row">
                                <!-- Sol Kolon -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-user text-primary"></i> Kullanıcı Adı <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="UserName" class="form-control" placeholder="ornek_kullanici" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        <small class="form-text text-muted">Küçük harf ve alt çizgi kullanabilirsiniz</small>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-id-card text-success"></i> Ad Soyad <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="FullName" class="form-control" placeholder="Ahmet Yılmaz" />
                                        <span asp-validation-for="FullName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-envelope text-info"></i> Email Adresi <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Email" type="email" class="form-control" placeholder="ornek@learnify.com" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-phone text-warning"></i> Telefon
                                        </label>
                                        <input asp-for="PhoneNumber" class="form-control" placeholder="+90 555 555 55 55" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- Sağ Kolon -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-lock text-danger"></i> Şifre <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <small class="form-text text-muted">En az 6 karakter, büyük ve küçük harf içermeli</small>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-lock text-danger"></i> Şifre Tekrar <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-shield text-primary"></i> Rol <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="Role" class="form-control">
                                            <option value="">Rol Seçiniz</option>
                                            @foreach (var role in ViewBag.Roles as List<string>)
                                            {
                                                <option value="@role">@role</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Role" class="text-danger"></span>
                                        <small class="form-text text-muted">Kullanıcının sistem içindeki yetkisi</small>
                                    </div>

                                    <div class="form-group">
                                        <label class="font-weight-bold">
                                            <i class="fa fa-briefcase text-success"></i> Branş/Meslek
                                        </label>
                                        <input asp-for="Profession" class="form-control" placeholder="Örn: Web Developer" />
                                        <span asp-validation-for="Profession" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Info Box -->
                            <div class="alert alert-info mt-3">
                                <h5><i class="fa fa-info-circle"></i> Bilgi</h5>
                                <ul class="mb-0">
                                    <li><strong>Admin:</strong> Tüm sisteme tam yetki</li>
                                    <li><strong>Instructor:</strong> Kurs ve ders oluşturma yetkisi</li>
                                    <li><strong>Student:</strong> Kurs görüntüleme ve kayıt olma yetkisi</li>
                                </ul>
                            </div>

                            <!-- Buttons -->
                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-success btn-lg">
                                    <i class="fa fa-save"></i> Kullanıcı Oluştur
                                </button>
                                <a href="/Admin/Dashboard/Index" class="btn btn-secondary btn-lg ml-2">
                                    <i class="fa fa-times"></i> İptal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
