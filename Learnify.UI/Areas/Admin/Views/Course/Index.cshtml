@using Learnify.DTO.DTOs.CourseDto
@model List<ResultCourseDto>

@{
    ViewData["Title"] = "Kurs Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
            <div class="heading1 mb-4">
                <h2 class="fw-bold">Kurs Listesi</h2>
            </div>

            <table class="table table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Açıklama</th>
                        <th>Ücret</th>
                        <th>Kategori</th>
                        <th class="text-center" style="width:160px;">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.Price ₺</td>
                            <td>@item.CategoryName</td>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="Course" asp-action="UpdateCourse" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Güncelle</a>
                                <form asp-area="Admin" asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@item.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <a asp-area="Admin" asp-controller="Course" asp-action="CreateCourse" class="btn btn-success mt-3">+ Yeni Kurs Ekle</a>
        </div>
    </div>
</div>
