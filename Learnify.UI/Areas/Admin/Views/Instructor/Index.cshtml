@using Learnify.DTO.DTOs.InstructorDto
@model List<ResultInstructorDto>
@{
    ViewData["Title"] = "Eğitmen Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
                    <div class="heading1 mb-4">
                        <h2 class="fw-bold">Eğitmen Listesi</h2>
                    </div>

                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Kullanıcı Adı</th>
                                <th>Ad Soyad</th>
                                <th>Email</th>
                                <th>Branş</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.UserName</td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Profession</td>
                                    <td class="text-center">
                                        <a href="/Admin/Instructor/UpdateInstructor/@item.InstructorID" class="btn btn-sm btn-primary">Güncelle</a>
                                        <a href="/Admin/Instructor/DeleteInstructor/@item.InstructorID" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Admin/Instructor/CreateInstructor" class="btn btn-success mt-3">+ Yeni Eğitmen Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
