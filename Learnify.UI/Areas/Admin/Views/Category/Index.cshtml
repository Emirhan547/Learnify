@using Learnify.DTO.DTOs.CategoryDto
@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Kategori Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;

}

<div class="right_content">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30 p-4 shadow-sm rounded-3">
                    <div class="heading1 mb-4">
                        <h2 class="fw-bold">Kategori Listesi</h2>
                    </div>

                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Kategori Adı</th>
                                <th class="text-center" style="width:160px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>@count</td>
                                    <td>@item.CategoryName</td>
                                    <td class="text-center">
                                        <a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-sm btn-primary">Güncelle</a>
                                        <a href="/Admin/Category/DeleteCategory/@item.CategoryID" class="btn btn-sm btn-danger">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <a href="/Admin/Category/CreateCategory" class="btn btn-success mt-3">+ Yeni Kategori Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>
