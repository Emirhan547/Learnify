@model dynamic
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-4">
    <!-- 🧱 Dashboard Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="fw-bold mb-0"><i class="bi bi-speedometer2"></i> Yönetim Paneli</h4>
        <span class="text-muted">Hoş geldiniz, @User.Identity?.Name</span>
    </div>

    <!-- 📊 İstatistik Kartları -->
    <div class="row g-3">
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm text-center p-3 bg-primary text-white">
                <i class="bi bi-book fs-1 mb-2"></i>
                <h6>Kurs Sayısı</h6>
                <h4 class="fw-bold">@ViewBag.TotalCourses</h4>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm text-center p-3 bg-success text-white">
                <i class="bi bi-tags fs-1 mb-2"></i>
                <h6>Kategori Sayısı</h6>
                <h4 class="fw-bold">@ViewBag.TotalCategories</h4>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm text-center p-3 bg-warning text-dark">
                <i class="bi bi-people fs-1 mb-2"></i>
                <h6>Öğrenci Sayısı</h6>
                <h4 class="fw-bold">@ViewBag.TotalStudents</h4>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm text-center p-3 bg-danger text-white">
                <i class="bi bi-person-video3 fs-1 mb-2"></i>
                <h6>Eğitmen Sayısı</h6>
                <h4 class="fw-bold">@ViewBag.TotalInstructors</h4>
            </div>
        </div>
    </div>

    <!-- 📋 Son Kayıtlar -->
    <div class="card mt-4 shadow-sm border-0 rounded-3">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold"><i class="bi bi-clock-history"></i> Son Kayıtlar</h6>
        </div>
        <div class="card-body p-0">
            @if (ViewBag.RecentEnrollments != null && ((IEnumerable<dynamic>)ViewBag.RecentEnrollments).Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th>#</th>
                            <th>Öğrenci</th>
                            <th>Kurs</th>
                            <th>Kayıt Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 1;
                            foreach (var item in ViewBag.RecentEnrollments)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.StudentName</td>
                                    <td>@item.CourseTitle</td>
                                    <td>@item.EnrolledDate.ToString("dd.MM.yyyy")</td>
                                </tr>
                                ;
                                i++;
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">Henüz kayıt bulunmuyor.</div>
            }
        </div>
    </div>
</div>
