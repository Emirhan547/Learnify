@model List<Learnify.DTO.DTOs.MessageDto.ResultMessageDto>
@{
    ViewData["Title"] = "Silinen Mesajlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <h4 class="fw-bold mb-3"><i class="bi bi-trash"></i> Silinen Mesajlar</h4>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th style="width:120px;">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var msg in Model)
                        {
                            <tr class="text-muted">
                                <td>@msg.Subject</td>
                                <td>@msg.SenderName</td>
                                <td>@msg.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td><span class="badge bg-secondary">Silinmiş</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="p-4 text-center text-muted">Henüz silinen mesaj yok.</div>
            }
        </div>
    </div>
</div>
